<div class="card">
    <div class="card-header">
        Edit Post
    </div>
    <form class="card-body add-post" id="add-post">
        <div>
            <label for="post-title" class="form-label">Title</label>
            <input type="text" id="post-title" name="post-title" class="form-input" value="{{title}}" />
        </div>
        <div>
            <label class="form-label" for="content">Content</label>
            <input class="textarea" name="content" id="content" type="text" value="{{content}}" />
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <button type="submit" class="btn btn-primary">Delete</button>
    </form>
</div>

<script src="/js/updatepost.js"></script>
<script src="/js/deletepost.js"></script>