<div class="card">
    <div class="col sm-12 md-6" id="login">
        <h2 class="card-header">Login</h2>
        <form class="login-form card-body">
            <div class="row mb-3">
                <label for="username-login" class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-10">
                    <input type="username" class="form-control" id="username-login" />
                </div>
            </div>
            <div class="row mb-3">
                <label for="password-login" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password-login" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
            <a href="/signup">Sign up instead</a>
        </form>
    </div>
</div>


<script src="../public/js/login.js"></script>