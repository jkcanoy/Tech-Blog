<div class="card">
    <div class="card-header">
        Create New Post
    </div>
    <form class="card-body new-post-form" id="new-post">
        <div>
            <label for="post-title" class="form-label">Title:</label>
            <input type="text" id="post-title" name="post-title" class="form-input" />
        </div>
        <div class="align-middle">
            <label for="post-body" class="form-label">Content:</label>
            <textarea name="post-body" rows="4" cols="100"></textarea>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

<script src="/js/newpost.js"></script>