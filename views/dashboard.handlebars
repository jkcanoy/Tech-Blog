{{#if posts.length}}
<section>
    <div>
        <h2>Hello, {{username}}</h2>
        <a href="/dashboard/new-form"><button class="btn btn-primary">New Post</button></a>
    </div>
    {{#each posts as |post|}}
    {{> dashboard-content post}}
    <a href="/dashboard/edit/{{post.id}}"><button class="btn btn-primary">Edit post</button></a>
    {{/each}}
</section>
{{/if}}



<script src="/js/newpost.js"></script>